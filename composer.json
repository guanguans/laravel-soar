{
    "name": "guanguans/laravel-soar",
    "keywords": [
        "soar",
        "sql",
        "mysql",
        "debug",
        "laravel"
    ],
    "description": "适配于 laravel 的 SQL 优化器和重写器扩展包。 - SQL optimizer and rewriter extension package for laravel framework.",
    "support": {
        "issues": "https://github.com/guanguans/laravel-soar/issues",
        "source": "https://github.com/guanguans/laravel-soar"
    },
    "type": "laravel",
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "guanguans",
            "email": "ityaozm@gmail.com"
        }
    ],
    "require": {
        "laravel/framework": "^5.5 || ~6.0 || ~7.0 || ^8.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "phpunit/phpunit": "~8.0",
        "orchestra/testbench": "^3.7",
        "brainmaestro/composer-git-hooks": "^2.7",
        "friendsofphp/php-cs-fixer": "^2.16",
        "guanguans/soar-php": "~2.0"
    },
    "autoload": {
        "psr-4": {
            "Guanguans\\LaravelSoar\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Guanguans\\LaravelSoar\\SoarServiceProvider"
            ]
        },
        "hooks": {
            "pre-commit": [
                "composer test",
                "composer check-style"
            ],
            "pre-push": [
                "composer test",
                "composer check-style"
            ]
        }
    },
    "scripts": {
        "post-update-cmd": [
            "cghooks update"
        ],
        "post-merge": "composer install",
        "post-install-cmd": [
            "cghooks add --ignore-lock",
            "cghooks update"
        ],
        "cghooks": "vendor/bin/cghooks",
        "check-style": "php-cs-fixer fix --using-cache=no --diff --config=.php_cs --dry-run --ansi",
        "fix-style": "php-cs-fixer fix --using-cache=no --config=.php_cs --ansi",
        "test": "vendor/bin/phpunit --coverage-text --colors=always --verbose"
    },
    "scripts-descriptions": {
        "test": "Run all tests.",
        "check-style": "Run style checks (only dry run - no fixing!).",
        "fix-style": "Run style checks and fix violations."
    }
}
